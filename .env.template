# =============================================================================
# Wizelit Environment Variables Template
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_USER=wizelit
POSTGRES_PASSWORD=your-secure-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=wizelit

# Database Connection Pool Configuration (optional)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO_SQL=false

# Default LLM Configuration (optional)
DEFAULT_PROVIDER=anthropic
DEFAULT_MODEL=claude-sonnet-4-5-20250929

# -----------------------------------------------------------------------------
# Redis (for real-time log streaming)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
ENABLE_LOG_STREAMING=true

# -----------------------------------------------------------------------------
# AWS Bedrock Configuration
# -----------------------------------------------------------------------------
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_DEFAULT_REGION=ap-southeast-2

# Model ID for chat (default: Claude 3 Haiku)
CHAT_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0

# Optional: Bedrock Inference Profile ARN (for specific models)
# BEDROCK_INFERENCE_PROFILE_ARN=

# -----------------------------------------------------------------------------
# Chainlit Configuration
# -----------------------------------------------------------------------------
# Generate with: chainlit create-secret
CHAINLIT_AUTH_SECRET=your-chainlit-secret

# -----------------------------------------------------------------------------
# OAuth Configuration (OPTIONAL)
# Only needed if you want Google OAuth authentication
# -----------------------------------------------------------------------------
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Task timeout in seconds (default: 20 minutes)
TASK_TIMEOUT=1200

# Log stream timeout in seconds (default: 5 minutes)
LOG_STREAM_TIMEOUT_SECONDS=300

# Maximum conversation history turns to keep
MAX_HISTORY_TURNS=10

# Number of log lines to show in job output
JOB_LOG_TAIL=25

# -----------------------------------------------------------------------------
# MCP Server URLs (OPTIONAL)
# MCP servers are added dynamically via Chainlit UI
# The hub can connect to servers running anywhere (local, cloud, etc.)
# -----------------------------------------------------------------------------
# MCP_SERVER_ENDPOINT=http://localhost:1337/sse

# -----------------------------------------------------------------------------
# GitHub Token (OPTIONAL)
# Only needed for private repository access
# -----------------------------------------------------------------------------
# GITHUB_TOKEN=your-github-token

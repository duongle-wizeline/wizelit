# =============================================================================
# Wizelit Environment Variables Template
# Copy this file to .env and fill in the values
# =============================================================================

# -----------------------------------------------------------------------------
# AWS CDK Deployment
# -----------------------------------------------------------------------------
CDK_DEFAULT_ACCOUNT=123456789012
CDK_DEFAULT_REGION=ap-southeast-2

# -----------------------------------------------------------------------------
# AWS Bedrock (LLM)
# -----------------------------------------------------------------------------
AWS_REGION=ap-southeast-2
# AWS_ACCESS_KEY_ID=your-access-key        # Optional: uses AWS CLI profile if not set
# AWS_SECRET_ACCESS_KEY=your-secret-key    # Optional: uses AWS CLI profile if not set
CHAT_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=wizelit
POSTGRES_PASSWORD=wizelit_dev_password
POSTGRES_DB=wizelit

# -----------------------------------------------------------------------------
# Redis (Log Streaming)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
ENABLE_LOG_STREAMING=true

# -----------------------------------------------------------------------------
# Chainlit
# -----------------------------------------------------------------------------
CHAINLIT_AUTH_SECRET=change-me-to-a-long-random-string

# -----------------------------------------------------------------------------
# Google OAuth (Optional)
# -----------------------------------------------------------------------------
# OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
# OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
TASK_TIMEOUT=1200
MAX_HISTORY_TURNS=10
LOG_STREAM_TIMEOUT_SECONDS=300
